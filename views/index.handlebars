<div class="container">
    <div class="row">
      <div class="panel panel-default text-center">
        <img src="http://www.iconninja.com/files/466/184/53/burger-icon.svg" alt="" height="auto" width="200px">
        <h1>WELCOME TO FISHER BURGER!</h1>
      </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel-panel default">
                <ul class="list-group">
                    {{#each burgers }}
                        {{#unless this.devoured}}
                            <li class="list-group-item">
                                <p class="text-center">{{this.burger_name}}<p>
                                <form class="text-center" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button class="btn btn-default btn-lg" type="submit"> EAT IT! <i class="fa fa-cutlery move-burger" name="eatButton" aria-hidden="true"></i></button>
                                </form>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel-panel default">
                <ul class="list-group text-center">
                    {{#each burgers }}
                        {{#if this.devoured}}
                            <li class="list-group-item">
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row text-center" style="height: 500px">
      <div class="panel panel-default">
        <form action="burgers/create" method="POST">
          <div class="form-group">
            <label for="">Enter a burger!</label>
            <br>
            <input class="form-control" type="text" name="myNewBurger" placeholder="your burger name goes here">
          </div>
            <div class="form-group">

              <input class="btn btn-success" type="submit" value="Add burger">
            </div>
        </form>
      </div>
    </div>
</div>




