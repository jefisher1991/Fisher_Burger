<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel-panel default">
                <ul class="list-group">
                    {{#each burgers }}
                        {{#unless this.devoured}}
                            <li class="list-group-item">
                                {{this.burger_name}}
                                <i class="fa fa-cutlery move-burger"  aria-hidden="true"></i>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel-panel default">
                <ul class="list-group">
                    {{#each burgers }}
                        {{#if this.devoured}}
                            <li class="list-group-item">
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div>
        <form action="burgers/create" method="POST">
            <label for="">Enter a burger!</label>
            <br>
            <input type="text" name="myNewBurger" placeholder="your burger name goes here">
            <br>
            <input type="submit" value="Add burger">
        </form>
    </div>
</div>


